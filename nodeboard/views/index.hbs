<h3>{{title}}</h3>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script>
$(document).ready(function(){

    $(".contaner").hide();
    $("button").click(function(){
        $(".container").toggle();
    });
});
</script>

<p> {{#if user}} Welcome,<b>{{user.username}}</b> you can use the sidebar to navigate the site
  {{else}}<div class="alert alert-warning"> you must login in order to access the features of this website,
    if you do not have an account you can  register one using the register link below or in the sidebar
   </div>{{/if}} </p>
<h3>

{{#if msg}}<div class="alert alert-success">{{msg}}</div>{{/if}}


  {{#if user}} {{#if user.moderator}}<a href="/classroom/create">Create Classroom</a> {{else}} 

<i><div class="alert alert-warning">Unfortunately
    you are not a moderator and cannot create classrooms. However you can navigate the site using the sidebar</div></i>{{/if}}
  {{else}}
  <center>
  <a href="/login" class="btn btn-info active" data-toggle="modal" data-target="#myModal">Log in </a>


   <a href="/register" class="btn btn-info active" data-toggle="modal" data-target="#myModal">Register </a>
</center>
  {{/if}}  </h3>

  {{#if user}}

  <button class="btn btnPrimary">Show recent announcements</button>
    <div class="container">
      <table class="table table-striped">

        <thead>
         <tr>
           <th>Announcement name</th>
           <th> Posted on </th>
         </tr>
        </thead>
  {{#each announcements}}
<tr>
<td>  <a href="/classroom/id?class={{this.class}}">{{this.name}} </a> </td>
<td>
  <i>{{this.posted}}</i>
</td>
</tr>

  {{/each}}
</table>
  </div>

  {{/if}}

      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-large" data-dismiss="modal">Close</button>
            </div>
          </div>

        </div>
      </div>
