<h1>{{title}}</h1>
<p>Welcome to creating a resource {{#if user}}, <b>{{user.username}}</b>  {{/if}}</p>
<h3>{{#if user}}{{else}}<a href="/login">Log in </a> | <a href="/register">Register </a>{{/if}}</h3>
{{#if error}} <div class="alert alert-danger">{{err.name}} : {{err.message}}</div>{{/if}}

{{#if user}}

<form action="/resources/create?id={{classId}}" method="POST" >
  <p>

<label name="label">Name: </label>
<input type="text" id="resource_name" name="resource_name"  class="form-control form-control-sm" placeholder="resource name">
<label name="label"> Link: </label>
<input type="text" id="resource_link" name="resource_link"  class="form-control form-control-sm" placeholder="http://example.com">
<label name="label">Description: </label>
    <textarea type="text" id="resource_description" name="resource_description" class=" form-control form-control-lg" placeholder="enter description"></textarea>
  <button type="submit" class="btn btnPrimary">Create a new resource</button>
</form>

{{/if}}
