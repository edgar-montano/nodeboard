<script src="/javascripts/announcements.js" type="text/javascript"></script>
<link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
   <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
   <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

<div id="classId" value="{{classId}}"></div>
<div id="username" value="{{user.username}}"></div>


<h1>{{title}}</h1>

<p>Welcome to creating an assignment {{#if user}}, <b>{{user.username}}</b>  {{/if}}</p>
<h3>{{#if user}}{{else}}<a href="/login">Log in </a> | <a href="/register">Register </a>{{/if}}</h3>
{{#if error}} <div class="alert alert-danger">{{err.name}} : {{err.message}}</div>{{/if}}

{{#if user}}


<form action="/assignment/create?id={{classId}}" method="POST" id="myForm">
  <p>

    <label name="label">Assignment Name: </label>
<input type="text" id="assignment_name" name="assignment_name"  class="form-control form-control-sm" placeholder="assignment name">
<label name="label">Date </label>
<input type="text" id="assignment_date" name="assignment_date"  class="datepicker" placeholder="assignment date">



<label name="label">assignment Description: </label>
    <textarea type="text" id="classroom_description" name="assignment_description" class=" form-control form-control-lg" placeholder="enter description"></textarea>
  <button type="submit" class="btn btnPrimary" >Create new assignment</button>
</form>
</div>
{{/if}}

<script>
$(function() {
  $( ".datepicker" ).datepicker();

});
</script>
